{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="min-h-screen bg-cover bg-center bg-no-repeat flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8" style="background-image: url('/images/hero-background.png');">
    <div class="absolute inset-0 bg-slate-900 bg-opacity-60 backdrop-blur-sm"></div>
    <div class="absolute top-4 left-4 z-10">
        <a href="{{ path('app_home') }}" class="text-white hover:text-cyan-200 transition-colors flex items-center">
            <span class="mr-2">‚Üê</span> Back to Home
        </a>
    </div>
    <div class="relative max-w-md w-full space-y-6 bg-white/10 backdrop-blur-md rounded-2xl p-8 shadow-2xl border border-white/20">
        <div>
            <div class="mx-auto h-12 w-auto flex justify-center">
                <img src="/images/densyst-logo.png" alt="DenSyst Logo" class="h-12 w-auto">
            </div>
            <h2 class="mt-4 text-center text-2xl font-bold text-white drop-shadow-lg">
                Join DenSyst
            </h2>
            <p class="mt-2 text-center text-sm text-cyan-100">
                Create your account to start managing your dental practice
            </p>
        </div>

        {{ form_start(registrationForm, {'attr': {'class': 'space-y-6'}}) }}
            <div class="space-y-4">
                <div>
                    <label for="{{ registrationForm.email.vars.id }}" class="block text-sm font-medium text-cyan-100 mb-1">Email Address</label>
                    {{ form_widget(registrationForm.email, {
                        'attr': {
                            'class': 'appearance-none relative block w-full px-4 py-3 border border-cyan-300/50 placeholder-cyan-200 text-white bg-white/10 backdrop-blur-sm rounded-lg focus:outline-none focus:ring-2 focus:ring-cyan-400 focus:border-cyan-400 sm:text-sm',
                            'placeholder': 'Enter your email'
                        }
                    }) }}
                    {{ form_errors(registrationForm.email) }}
                </div>
                <div>
                    <label for="{{ registrationForm.plainPassword.vars.id }}" class="block text-sm font-medium text-cyan-100 mb-1">Password</label>
                    {{ form_widget(registrationForm.plainPassword, {
                        'attr': {
                            'class': 'appearance-none relative block w-full px-4 py-3 border border-cyan-300/50 placeholder-cyan-200 text-white bg-white/10 backdrop-blur-sm rounded-lg focus:outline-none focus:ring-2 focus:ring-cyan-400 focus:border-cyan-400 sm:text-sm',
                            'placeholder': 'Create a password'
                        }
                    }) }}
                    {{ form_errors(registrationForm.plainPassword) }}
                </div>
            </div>

            <div class="flex items-start">
                <div class="flex items-center h-5">
                    {{ form_widget(registrationForm.agreeTerms, {
                        'attr': {
                            'class': 'h-4 w-4 text-cyan-400 focus:ring-cyan-400 border-cyan-300/50 rounded bg-white/10'
                        }
                    }) }}
                </div>
                <div class="ml-3 text-sm">
                    <label for="{{ registrationForm.agreeTerms.vars.id }}" class="text-cyan-100">
                        I agree to the
                        <a href="#" class="text-cyan-300 hover:text-cyan-200 underline">Terms and Conditions</a>
                    </label>
                    {{ form_errors(registrationForm.agreeTerms) }}
                </div>
            </div>

            <div>
                <button type="submit" class="w-full flex justify-center py-3 px-4 border border-transparent text-sm font-semibold rounded-lg text-white bg-gradient-to-r from-cyan-600 to-teal-600 hover:from-cyan-700 hover:to-teal-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-cyan-400 transform hover:scale-105 transition-all duration-200 shadow-lg">
                    Create Account
                </button>
            </div>

            <div class="text-center">
                <p class="text-sm text-cyan-100">
                    Already have an account?
                    <a href="{{ path('app_login') }}" class="font-semibold text-cyan-300 hover:text-cyan-200 transition-colors">
                        Sign in here
                    </a>
                </p>
            </div>
        {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}