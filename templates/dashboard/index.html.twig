{% extends 'user/base.html.twig' %}

{% block title %}User Dashboard{% endblock %}

{% block page_title %}My Dashboard{% endblock %}

{% block content %}
<div class="space-y-8">
    <!-- Welcome Section -->
    <div class="bg-gradient-to-r from-cyan-600 to-teal-600 rounded-2xl p-8 text-white shadow-xl">
        <div class="flex items-center justify-between">
            <div>
                <h2 class="text-3xl font-bold mb-2">Welcome back, {{ app.user.userIdentifier }}!</h2>
                <p class="text-cyan-100 text-lg">Manage your dental care and appointments in one place.</p>
            </div>
            <div class="hidden md:block">
                <div class="w-20 h-20 bg-white/20 rounded-full flex items-center justify-center backdrop-blur-sm">
                    <span class="text-4xl">ü¶∑</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Appointments -->
        <div class="bg-white p-6 rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 border border-gray-100 hover:-translate-y-1">
            <div class="flex items-center justify-between mb-4">
                <div class="w-12 h-12 bg-gradient-to-br from-cyan-500 to-blue-600 rounded-xl flex items-center justify-center shadow-lg">
                    <span class="text-white text-xl">üìÖ</span>
                </div>
                <div class="text-right">
                    <p class="text-2xl font-bold text-gray-900">{{ recent_appointments|length }}</p>
                    <p class="text-sm text-gray-500">My Appointments</p>
                </div>
            </div>
            <div class="flex items-center justify-between">
                <span class="text-sm text-gray-600">Total booked</span>
                <a href="{{ path('user_appointments') }}" class="text-blue-500 text-sm font-medium hover:text-blue-700">View all</a>
            </div>
        </div>

        <!-- Treatments -->
        <div class="bg-white p-6 rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 border border-gray-100 hover:-translate-y-1">
            <div class="flex items-center justify-between mb-4">
                <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-teal-600 rounded-xl flex items-center justify-center shadow-lg">
                    <span class="text-white text-xl">ü¶∑</span>
                </div>
                <div class="text-right">
                    <p class="text-2xl font-bold text-gray-900">{{ recent_appointments|filter(a => a.status == 'confirmed')|length }}</p>
                    <p class="text-sm text-gray-500">Confirmed</p>
                </div>
            </div>
            <div class="flex items-center justify-between">
                <span class="text-sm text-gray-600">Appointments</span>
                <span class="text-green-500 text-sm font-medium">Active</span>
            </div>
        </div>

        <!-- Profile -->
        <div class="bg-white p-6 rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 border border-gray-100 hover:-translate-y-1">
            <div class="flex items-center justify-between mb-4">
                <div class="w-12 h-12 bg-gradient-to-br from-purple-500 to-indigo-600 rounded-xl flex items-center justify-center shadow-lg">
                    <span class="text-white text-xl">üë§</span>
                </div>
                <div class="text-right">
                    <p class="text-2xl font-bold text-gray-900">{{ recent_appointments|filter(a => a.status == 'pending')|length }}</p>
                    <p class="text-sm text-gray-500">Pending</p>
                </div>
            </div>
            <div class="flex items-center justify-between">
                <span class="text-sm text-gray-600">Awaiting confirmation</span>
                <span class="text-purple-500 text-sm font-medium">Review</span>
            </div>
        </div>
    </div>

    <!-- Quick Actions & Recent Activity -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Quick Actions -->
        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-6">Quick Actions</h3>
            <div class="space-y-4">
                <a href="{{ path('user_appointments_book') }}" class="flex items-center p-4 bg-gradient-to-r from-cyan-50 to-teal-50 rounded-xl hover:from-cyan-100 hover:to-teal-100 transition-all duration-200 border border-cyan-200">
                    <div class="w-10 h-10 bg-cyan-500 rounded-lg flex items-center justify-center mr-4">
                        <span class="text-white">üìÖ</span>
                    </div>
                    <div>
                        <p class="font-semibold text-gray-900">Book Appointment</p>
                        <p class="text-sm text-gray-600">Schedule a new visit</p>
                    </div>
                </a>
                <a href="{{ path('user_appointments') }}" class="flex items-center p-4 bg-gradient-to-r from-green-50 to-emerald-50 rounded-xl hover:from-green-100 hover:to-emerald-100 transition-all duration-200 border border-green-200">
                    <div class="w-10 h-10 bg-green-500 rounded-lg flex items-center justify-center mr-4">
                        <span class="text-white">üìã</span>
                    </div>
                    <div>
                        <p class="font-semibold text-gray-900">View Appointments</p>
                        <p class="text-sm text-gray-600">Manage your bookings</p>
                    </div>
                </a>
                <a href="{{ path('user_profile') }}" class="flex items-center p-4 bg-gradient-to-r from-purple-50 to-indigo-50 rounded-xl hover:from-purple-100 hover:to-indigo-100 transition-all duration-200 border border-purple-200">
                    <div class="w-10 h-10 bg-purple-500 rounded-lg flex items-center justify-center mr-4">
                        <span class="text-white">üë§</span>
                    </div>
                    <div>
                        <p class="font-semibold text-gray-900">My Profile</p>
                        <p class="text-sm text-gray-600">Update your information</p>
                    </div>
                </a>
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-6">My Recent Appointments</h3>
            {% if recent_appointments|length > 0 %}
                <div class="space-y-4">
                    {% for appointment in recent_appointments %}
                        <div class="flex items-start space-x-4">
                            <div class="w-10 h-10
                                {% if appointment.status == 'pending' %}bg-yellow-100 text-yellow-600
                                {% elseif appointment.status == 'confirmed' %}bg-green-100 text-green-600
                                {% else %}bg-gray-100 text-gray-600{% endif %}
                                rounded-full flex items-center justify-center">
                                {% if appointment.status == 'pending' %}
                                    <span class="text-sm">‚è≥</span>
                                {% elseif appointment.status == 'confirmed' %}
                                    <span class="text-sm">‚úì</span>
                                {% else %}
                                    <span class="text-sm">‚ùå</span>
                                {% endif %}
                            </div>
                            <div class="flex-1">
                                <p class="text-sm font-medium text-gray-900">{{ appointment.service }}</p>
                                <p class="text-sm text-gray-600">
                                    {{ appointment.appointmentDate|date('M j, Y') }} at {{ appointment.timeSlot }}
                                </p>
                                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium
                                    {% if appointment.status == 'pending' %}bg-yellow-100 text-yellow-800
                                    {% elseif appointment.status == 'confirmed' %}bg-green-100 text-green-800
                                    {% else %}bg-gray-100 text-gray-800{% endif %}">
                                    {{ appointment.status|title }}
                                </span>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="text-center py-8">
                    <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                        <span class="text-2xl text-gray-400">üìÖ</span>
                    </div>
                    <p class="text-gray-500 mb-2">No appointments yet</p>
                    <a href="{{ path('user_appointments_book') }}" class="text-cyan-600 hover:text-cyan-700 text-sm font-medium">
                        Book your first appointment
                    </a>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}