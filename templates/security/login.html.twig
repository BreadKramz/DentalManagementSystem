{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="min-h-screen bg-cover bg-center bg-no-repeat flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8" style="background-image: url('/images/hero-background.png');">
    <div class="absolute inset-0 bg-slate-900 bg-opacity-60 backdrop-blur-sm"></div>
    <div class="absolute top-4 left-4 z-10">
        <a href="{{ path('app_home') }}" class="text-white hover:text-cyan-200 transition-colors flex items-center">
            <span class="mr-2">‚Üê</span> Back to Home
        </a>
    </div>
    <div class="relative max-w-md w-full space-y-6 bg-white/10 backdrop-blur-md rounded-2xl p-8 shadow-2xl border border-white/20">
        <div>
            <div class="mx-auto h-12 w-auto flex justify-center">
                <img src="/images/densyst-logo.png" alt="DenSyst Logo" class="h-12 w-auto">
            </div>
            <h2 class="mt-4 text-center text-2xl font-bold text-white drop-shadow-lg">
                Welcome Back
            </h2>
            <p class="mt-2 text-center text-sm text-cyan-100">
                Sign in to access your dental management dashboard
            </p>
        </div>
        <form class="space-y-6" method="post">
            {% if error %}
                <div class="bg-red-500/20 border border-red-400 text-red-100 px-4 py-3 rounded-lg backdrop-blur-sm">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="space-y-4">
                <div>
                    <label for="email" class="block text-sm font-medium text-cyan-100 mb-1">Email Address</label>
                    <input id="email" name="email" type="email" autocomplete="email" required
                           class="appearance-none relative block w-full px-4 py-3 border border-cyan-300/50 placeholder-cyan-200 text-white bg-white/10 backdrop-blur-sm rounded-lg focus:outline-none focus:ring-2 focus:ring-cyan-400 focus:border-cyan-400 sm:text-sm"
                           placeholder="Enter your email" value="{{ last_username }}">
                </div>
                <div>
                    <label for="password" class="block text-sm font-medium text-cyan-100 mb-1">Password</label>
                    <input id="password" name="password" type="password" autocomplete="current-password" required
                           class="appearance-none relative block w-full px-4 py-3 border border-cyan-300/50 placeholder-cyan-200 text-white bg-white/10 backdrop-blur-sm rounded-lg focus:outline-none focus:ring-2 focus:ring-cyan-400 focus:border-cyan-400 sm:text-sm"
                           placeholder="Enter your password">
                </div>
            </div>

            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <input id="remember_me" name="_remember_me" type="checkbox" class="h-4 w-4 text-cyan-400 focus:ring-cyan-400 border-cyan-300/50 rounded bg-white/10">
                    <label for="remember_me" class="ml-2 block text-sm text-cyan-100">
                        Remember me
                    </label>
                </div>

                <div class="text-sm">
                    <a href="#" class="font-medium text-cyan-300 hover:text-cyan-200">
                        Forgot password?
                    </a>
                </div>
            </div>

            <div>
                <button type="submit" class="w-full flex justify-center py-3 px-4 border border-transparent text-sm font-semibold rounded-lg text-white bg-gradient-to-r from-cyan-600 to-teal-600 hover:from-cyan-700 hover:to-teal-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-cyan-400 transform hover:scale-105 transition-all duration-200 shadow-lg">
                    Sign In
                </button>
            </div>

            <div class="text-center">
                <p class="text-sm text-cyan-100">
                    Don't have an account?
                    <a href="{{ path('app_register') }}" class="font-semibold text-cyan-300 hover:text-cyan-200 transition-colors">
                        Sign up here
                    </a>
                </p>
            </div>
        </form>
    </div>
</div>
{% endblock %}