{% extends 'admin/base.html.twig' %}

{% block title %}User Management{% endblock %}

{% block page_title %}User Management{% endblock %}

{% block content %}
<div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">All Users</h1>
    <a href="{{ path('admin_users_new') }}" class="bg-gradient-to-r from-cyan-600 to-teal-600 hover:from-cyan-700 hover:to-teal-700 text-white px-6 py-3 rounded-xl font-semibold transition-all duration-200 shadow-lg hover:shadow-xl transform hover:scale-105">
        Add New User
    </a>
</div>

<div class="bg-white rounded-xl shadow-lg border border-gray-100 overflow-hidden">
    <!-- Search and Filter -->
    <div class="px-6 py-4 border-b border-gray-200">
        <div class="flex flex-col sm:flex-row gap-4">
            <div class="flex-1">
                <input type="text" id="userSearch" placeholder="Search users by email..." class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-cyan-500 focus:border-cyan-500">
            </div>
            <div class="flex gap-2">
                <button class="filter-btn px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors" data-role="all">All</button>
                <button class="filter-btn px-4 py-2 bg-purple-100 text-purple-700 rounded-lg hover:bg-purple-200 transition-colors" data-role="ROLE_ADMIN">Admin</button>
                <button class="filter-btn px-4 py-2 bg-blue-100 text-blue-700 rounded-lg hover:bg-blue-200 transition-colors" data-role="ROLE_STAFF">Staff</button>
                <button class="filter-btn px-4 py-2 bg-green-100 text-green-700 rounded-lg hover:bg-green-200 transition-colors" data-role="ROLE_USER">User</button>
            </div>
        </div>
    </div>

    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Role</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for user in users %}
                <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ user.id }}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">{{ user.email }}</td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        {% if 'ROLE_ADMIN' in user.roles %}
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">Admin</span>
                        {% elseif 'ROLE_STAFF' in user.roles %}
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">Staff</span>
                        {% else %}
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">User</span>
                        {% endif %}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        {% if user.status == 'active' %}
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                <svg class="w-2 h-2 mr-1.5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                                    <circle cx="10" cy="10" r="3"></circle>
                                </svg>
                                Active
                            </span>
                        {% else %}
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                <svg class="w-2 h-2 mr-1.5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                                    <circle cx="10" cy="10" r="3"></circle>
                                </svg>
                                Inactive
                            </span>
                        {% endif %}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                        <div class="flex items-center space-x-4">
                            <a href="{{ path('admin_users_show', {'id': user.id}) }}" class="text-indigo-600 hover:text-indigo-900 transition-colors">View</a>
                            <a href="{{ path('admin_users_edit', {'id': user.id}) }}" class="text-cyan-600 hover:text-cyan-900 transition-colors">Edit</a>
                            <button type="button" onclick="openStatusToggleModal({{ user.id }}, '{{ csrf_token('toggle_status' ~ user.id) }}', {{ user.status == 'active' ? 'true' : 'false' }})" class="transition-colors {% if user.status == 'active' %}text-orange-600 hover:text-orange-900{% else %}text-green-600 hover:text-green-900{% endif %}">
                                {% if user.status == 'active' %}Deactivate{% else %}Activate{% endif %}
                            </button>
                            {% if user != app.user %}
                            <button type="button" onclick="openDeleteModal({{ user.id }}, '{{ csrf_token('delete' ~ user.id) }}')" class="text-red-600 hover:text-red-900 transition-colors">Delete</button>
                            {% endif %}
                        </div>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div id="deleteModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50">
    <div class="flex items-center justify-center min-h-screen p-4">
        <div class="bg-white rounded-lg shadow-xl max-w-md w-full">
            <div class="p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">Confirm Delete</h3>
                <p class="text-gray-600 mb-6">Are you sure you want to delete this user? This action cannot be undone.</p>
                <form id="deleteForm" method="post" data-turbo="false">
                    <input type="hidden" name="_token" id="deleteToken">
                    <div class="flex justify-end space-x-3">
                        <button type="button" onclick="closeDeleteModal()" class="px-4 py-2 text-gray-700 bg-gray-100 hover:bg-gray-200 rounded-lg transition-colors">
                            Cancel
                        </button>
                        <button type="submit" class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg transition-colors">
                            Delete
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Status Toggle Confirmation Modal -->
<div id="statusToggleModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50">
    <div class="flex items-center justify-center min-h-screen p-4">
        <div class="bg-white rounded-lg shadow-xl max-w-md w-full">
            <div class="p-6">
                <h3 id="statusToggleTitle" class="text-lg font-semibold text-gray-900 mb-4">Confirm Status Change</h3>
                <p id="statusToggleMessage" class="text-gray-600 mb-6">Are you sure you want to change this user's status?</p>
                <div class="flex justify-end space-x-3">
                    <button type="button" onclick="closeStatusToggleModal()" class="px-4 py-2 text-gray-700 bg-gray-100 hover:bg-gray-200 rounded-lg transition-colors">
                        Cancel
                    </button>
                    <button type="button" id="statusToggleConfirm" class="px-4 py-2 bg-orange-600 hover:bg-orange-700 text-white rounded-lg transition-colors">
                        Confirm
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Search and Filter Functionality
const searchInput = document.getElementById('userSearch');
const filterButtons = document.querySelectorAll('.filter-btn');
const tableRows = document.querySelectorAll('tbody tr');

let currentFilter = 'all';

function filterUsers() {
    const searchTerm = searchInput.value.toLowerCase();

    tableRows.forEach(row => {
        const email = row.cells[1].textContent.toLowerCase();
        const role = row.querySelector('.inline-flex').textContent.toLowerCase();

        const matchesSearch = email.includes(searchTerm);
        const matchesFilter = currentFilter === 'all' ||
            (currentFilter === 'ROLE_ADMIN' && role.includes('admin')) ||
            (currentFilter === 'ROLE_STAFF' && role.includes('staff')) ||
            (currentFilter === 'ROLE_USER' && role.includes('user'));

        row.style.display = matchesSearch && matchesFilter ? '' : 'none';
    });
}

searchInput.addEventListener('input', filterUsers);

filterButtons.forEach(button => {
    button.addEventListener('click', function() {
        filterButtons.forEach(btn => btn.classList.remove('ring-2', 'ring-offset-2'));
        this.classList.add('ring-2', 'ring-offset-2', 'ring-cyan-500');
        currentFilter = this.dataset.role;
        filterUsers();
    });
});

// Set default filter
document.querySelector('[data-role="all"]').classList.add('ring-2', 'ring-offset-2', 'ring-cyan-500');

function openDeleteModal(userId, csrfToken) {
    const modal = document.getElementById('deleteModal');
    const deleteForm = document.getElementById('deleteForm');
    const deleteToken = document.getElementById('deleteToken');
    
    // Set the form action and token
    deleteForm.action = `/admin/users/${userId}/delete`;
    deleteToken.value = csrfToken;
    
    // Show the modal
    modal.classList.remove('hidden');
}

function closeDeleteModal() {
    const modal = document.getElementById('deleteModal');
    modal.classList.add('hidden');
}

// Close modal when clicking outside
document.getElementById('deleteModal').addEventListener('click', function(e) {
    if (e.target === this) {
        closeDeleteModal();
    }
});

// Status toggle modal functions
let statusToggleData = { userId: null, csrfToken: null };

function openStatusToggleModal(userId, csrfToken, isActive) {
    const modal = document.getElementById('statusToggleModal');
    const title = document.getElementById('statusToggleTitle');
    const message = document.getElementById('statusToggleMessage');
    const confirmBtn = document.getElementById('statusToggleConfirm');
    
    statusToggleData.userId = userId;
    statusToggleData.csrfToken = csrfToken;
    
    if (isActive) {
        title.textContent = 'Deactivate User';
        message.textContent = 'Are you sure you want to deactivate this user? They will not be able to log in.';
        confirmBtn.textContent = 'Deactivate';
        confirmBtn.className = 'px-4 py-2 bg-orange-600 hover:bg-orange-700 text-white rounded-lg transition-colors';
    } else {
        title.textContent = 'Activate User';
        message.textContent = 'Are you sure you want to activate this user? They will be able to log in again.';
        confirmBtn.textContent = 'Activate';
        confirmBtn.className = 'px-4 py-2 bg-green-600 hover:bg-green-700 text-white rounded-lg transition-colors';
    }
    
    modal.classList.remove('hidden');
}

function closeStatusToggleModal() {
    const modal = document.getElementById('statusToggleModal');
    modal.classList.add('hidden');
    statusToggleData = { userId: null, csrfToken: null };
}

function confirmStatusToggle() {
    if (!statusToggleData.userId || !statusToggleData.csrfToken) {
        return;
    }
    
    fetch(`/admin/users/${statusToggleData.userId}/toggle-status`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
            'X-Requested-With': 'XMLHttpRequest'
        },
        body: JSON.stringify({ _token: statusToggleData.csrfToken })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            location.reload();
        } else {
            alert('Error toggling user status: ' + (data.message || 'Unknown error'));
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('An error occurred while toggling user status');
    })
    .finally(() => {
        closeStatusToggleModal();
    });
}

// Set up status toggle confirm button
document.getElementById('statusToggleConfirm').addEventListener('click', confirmStatusToggle);

// Close status toggle modal when clicking outside
document.getElementById('statusToggleModal').addEventListener('click', function(e) {
    if (e.target === this) {
        closeStatusToggleModal();
    }
});
</script>
{% endblock %}