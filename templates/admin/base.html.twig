{% extends 'base.html.twig' %}

{% block body %}
<div class="min-h-screen flex">
    <!-- Sidebar -->
    <div class="w-64 bg-slate-800 shadow-lg fixed h-full flex flex-col">
        <!-- Logo Section -->
        <div class="flex items-center justify-center h-16 bg-slate-900 border-b border-slate-700">
            <img src="/images/densyst-logo.png" alt="DenSyst Logo" class="h-8 w-auto">
            <span class="ml-2 text-white text-lg font-bold">Admin</span>
        </div>

        <!-- Navigation Menu -->
        <nav class="flex-1 px-4 py-6 space-y-2">
            <a href="{{ path('admin_dashboard') }}" class="flex items-center px-4 py-3 text-cyan-100 rounded-lg hover:bg-slate-700 hover:text-white transition-colors {{ app.request.attributes.get('_route') == 'admin_dashboard' ? 'bg-slate-700 text-white' : '' }}">
                <span class="w-5 h-5 mr-3">ðŸ“Š</span>
                Dashboard
            </a>
            {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('admin_users') }}" class="flex items-center px-4 py-3 text-cyan-100 rounded-lg hover:bg-slate-700 hover:text-white transition-colors {{ app.request.attributes.get('_route') starts with 'admin_users' ? 'bg-slate-700 text-white' : '' }}">
                <span class="w-5 h-5 mr-3">ðŸ‘¥</span>
                User Management
            </a>
            {% endif %}
            <a href="{{ path('admin_products') }}" class="flex items-center px-4 py-3 text-cyan-100 rounded-lg hover:bg-slate-700 hover:text-white transition-colors {{ app.request.attributes.get('_route') starts with 'admin_products' ? 'bg-slate-700 text-white' : '' }}">
                <span class="w-5 h-5 mr-3">ðŸ“¦</span>
                Product Management
            </a>
            <a href="{{ path('admin_appointments') }}" class="flex items-center px-4 py-3 text-cyan-100 rounded-lg hover:bg-slate-700 hover:text-white transition-colors {{ app.request.attributes.get('_route') starts with 'admin_appointments' ? 'bg-slate-700 text-white' : '' }}">
                <span class="w-5 h-5 mr-3">ðŸ“…</span>
                Appointments
            </a>
            {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('admin_activity_logs') }}" class="flex items-center px-4 py-3 text-cyan-100 rounded-lg hover:bg-slate-700 hover:text-white transition-colors {{ app.request.attributes.get('_route') == 'admin_activity_logs' ? 'bg-slate-700 text-white' : '' }}">
                <span class="w-5 h-5 mr-3">ðŸ“‹</span>
                Activity Logs
            </a>
            {% endif %}
        </nav>

        <!-- User Profile Section -->
        <div class="p-4 border-t border-slate-700 bg-slate-900">
            <div class="flex items-center mb-4">
                <div class="w-8 h-8 bg-cyan-500 rounded-full flex items-center justify-center text-white font-semibold">
                    {{ app.user.userIdentifier|first|upper }}
                </div>
                <div class="ml-3">
                    <p class="text-cyan-100 text-sm font-medium">{{ app.user.userIdentifier }}</p>
                    <p class="text-cyan-300 text-xs">Administrator</p>
                </div>
            </div>
            <a href="{{ path('app_logout') }}" class="flex items-center px-4 py-2 text-red-400 rounded-lg hover:bg-red-600 hover:text-white transition-colors">
                <span class="w-4 h-4 mr-2">ðŸšª</span>
                Logout
            </a>
        </div>
    </div>

    <!-- Main Content Area -->
    <div class="flex-1 flex flex-col" style="margin-left: 16rem;">
        <!-- Top Header -->
        <header class="bg-white shadow-sm h-16 flex items-center justify-between px-6 border-b border-gray-200">
            <h1 class="text-2xl font-bold text-gray-900">{% block page_title %}Dashboard{% endblock %}</h1>
            <div class="text-sm text-gray-600">
                Welcome back, {{ app.user.userIdentifier }}
            </div>
        </header>

        <!-- Main Content -->
        <main class="flex-1 overflow-y-auto bg-white p-6">
            {% block content %}{% endblock %}
        </main>
    </div>
</div>
{% endblock %}