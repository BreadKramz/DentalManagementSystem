{% extends 'admin/base.html.twig' %}

{% block title %}Edit Appointment{% endblock %}

{% block page_title %}Edit Appointment{% endblock %}

{% block content %}
<div class="max-w-2xl mx-auto">
    <div class="bg-white rounded-xl shadow-lg border border-gray-100 p-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Edit Appointment</h2>

        <form method="post" class="space-y-6">
            <div>
                <label for="service" class="block text-sm font-medium text-gray-700 mb-1">Service</label>
                <select id="service" name="service" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-cyan-500 focus:border-cyan-500">
                    {% for service in services %}
                    <option value="{{ service }}" {{ appointment.service == service ? 'selected' : '' }}>{{ service }}</option>
                    {% endfor %}
                </select>
            </div>

            <div>
                <label for="date" class="block text-sm font-medium text-gray-700 mb-1">Date</label>
                <input type="date" id="date" name="date" required value="{{ appointment.appointmentDate|date('Y-m-d') }}" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-cyan-500 focus:border-cyan-500">
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-3">Time Slot</label>
                <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
                    {% for slot in time_slots %}
                    <label class="relative">
                        <input type="radio" name="time_slot" value="{{ slot }}" required {{ appointment.timeSlot == slot ? 'checked' : '' }} class="sr-only peer">
                        <div class="p-4 border-2 border-gray-200 rounded-lg cursor-pointer peer-checked:border-cyan-500 peer-checked:bg-cyan-50 hover:border-cyan-300 transition-colors text-center">
                            <span class="text-sm font-medium text-gray-900">{{ slot }}</span>
                        </div>
                    </label>
                    {% endfor %}
                </div>
            </div>

            <div>
                <label for="status" class="block text-sm font-medium text-gray-700 mb-1">Status</label>
                <select id="status" name="status" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-cyan-500 focus:border-cyan-500">
                    {% for status in statuses %}
                    <option value="{{ status }}" {{ appointment.status == status ? 'selected' : '' }}>{{ status|title }}</option>
                    {% endfor %}
                </select>
            </div>

            <div class="flex justify-end space-x-4">
                <a href="{{ path('admin_appointments') }}" class="bg-gray-300 hover:bg-gray-400 text-gray-800 px-6 py-3 rounded-lg font-semibold transition-colors">
                    Cancel
                </a>
                <button type="submit" class="bg-gradient-to-r from-cyan-600 to-teal-600 hover:from-cyan-700 hover:to-teal-700 text-white px-6 py-3 rounded-lg font-semibold transition-all duration-200 shadow-lg hover:shadow-xl transform hover:scale-105">
                    Update Appointment
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}